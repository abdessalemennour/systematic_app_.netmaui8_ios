                            <Label Text="Logs" 
                               HorizontalOptions="Center"
                               FontSize="10"
                               TextColor="Black"
                               FontAttributes="Bold"/>
                        </StackLayout>

                    </StackLayout>
                </SwipeItemView>
            </SwipeItems>
