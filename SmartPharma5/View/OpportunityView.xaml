    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding GoBackCommand}" />
    </Shell.BackButtonBehavior>

    <NavigationPage.TitleView>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackLayout VerticalOptions="Center">
                <Label Text="{Binding Title }" HorizontalOptions="CenterAndExpand" FontSize="19" TextColor="White" VerticalOptions="CenterAndExpand"></Label>

            </StackLayout>
            <ImageButton Grid.Column="2" 
                        Source="editregular.png" 
                        WidthRequest="35"
                        HeightRequest="35"
                        Padding="5"
                        CornerRadius="6"
                        BackgroundColor="#4DBF49"
                        Command="{Binding EditCommand}"
                        HorizontalOptions="End"
                        VerticalOptions="Center">
                <ImageButton.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean">
                        <On Platform="iOS" Value="True"/>
                        <On Platform="Android" Value="False"/>
                    </OnPlatform>
                </ImageButton.IsVisible>
            </ImageButton>

            <ImageButton Grid.Column="2"
                        Source="baselineadd.png"
                        WidthRequest="35"
                        HeightRequest="35"
                        Padding="5"
                        CornerRadius="6"
                        BackgroundColor="#4DBF49"
                        Command="{Binding AddCommand}"
                        HorizontalOptions="End"
                        VerticalOptions="Center">
                <ImageButton.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean">
                        <On Platform="iOS" Value="True"/>
                        <On Platform="Android" Value="False"/>
                    </OnPlatform>
                </ImageButton.IsVisible>
            </ImageButton>
                        <ImageButton Source="pichon_menu2.png"
                         Grid.Column="3"
                         WidthRequest="35"
                         HeightRequest="35"
                         BackgroundColor="Transparent"
                         Clicked="OnSwipeViewClicked"
                         HorizontalOptions="End"
                         VerticalOptions="Center"
                         IsVisible="{Binding IsMainButtonVisible}"/>
        </Grid>
    </NavigationPage.TitleView>

