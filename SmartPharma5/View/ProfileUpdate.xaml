                            <Label Text="Note" 
                               HorizontalOptions="Center"
                               FontSize="10"
                               TextColor="Black"
                               FontAttributes="Bold"/>
                        </StackLayout>
                        
                        <!-- Chat Button -->
                        <StackLayout Orientation="Vertical" HorizontalOptions="Center" Spacing="2">
