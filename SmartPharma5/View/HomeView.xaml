<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:dxco="clr-namespace:DevExpress.Maui.Controls;assembly=DevExpress.Maui.Controls"
             xmlns:dxe="clr-namespace:DevExpress.Maui.Editors;assembly=DevExpress.Maui.Editors"
             x:Class="SmartPharma5.View.HomeView"
             xmlns:local="clr-namespace:SmartPharma5.ViewModel"
             BackgroundColor="BlueViolet"
             MenuItem.Accelerator="true"
             NavigationPage.HasBackButton="False"
             Shell.FlyoutBehavior="Flyout"
             NavigationPage.HasNavigationBar="true"
             Title="HomeView">



    <ContentPage.BindingContext>
        <local:HomeViewModel/>
    </ContentPage.BindingContext>
    <NavigationPage.TitleView>
        
        <AbsoluteLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">

            <!-- StackLayout principal pour le menu + titre -->
            <StackLayout Orientation="Horizontal" 
                     AbsoluteLayout.LayoutBounds="0,0,1,1"
                     AbsoluteLayout.LayoutFlags="All"
                     VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand"
                     Spacing="10"
                     Padding="10,0">

                <!-- Bouton menu -->
                <ImageButton Source="pichon_menu2.png"
                         BackgroundColor="Transparent"
                         WidthRequest="40"
                         HeightRequest="40"
                         Clicked="ImageButton_Clicked"
                         HorizontalOptions="Start"
                         VerticalOptions="Center"/>

                <!-- Titre -->
                <Label Text="Menu" 
                   HorizontalOptions="CenterAndExpand" 
                   HorizontalTextAlignment="Center" 
                   FontSize="19" 
                   TextColor="White" 
                   VerticalOptions="Center"/>

            </StackLayout>

            <!-- Groupe des deux boutons à droite -->
            <StackLayout Orientation="Horizontal"
                     Spacing="10"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     AbsoluteLayout.LayoutBounds="0.95,0.5,-1,-1"
                     VerticalOptions="Center">

                <!-- Nouveau bouton -->
                <ImageButton Source="activity.png"
                         BackgroundColor="Transparent"
                         WidthRequest="30"
                         HeightRequest="30"
                         CornerRadius="10"
                         Clicked="OnActivityButtonClicked"/>

                <!-- Bouton chat -->
                <Grid>
                    <ImageButton Source="chat.png"
                             BackgroundColor="Transparent"
                             WidthRequest="30"
                             HeightRequest="30"
                             CornerRadius="10"
                             Clicked="OnChatButtonClicked"/>

                    <!-- Badge pour messages non lus -->
                    <Frame IsVisible="False"
                       x:Name="UnreadBadgeFrame"
                       BackgroundColor="Red"
                       CornerRadius="10"
                       Padding="0"
                       HeightRequest="20"
                       WidthRequest="20"
                       HorizontalOptions="End"
                       VerticalOptions="Start"
                       Margin="0,-5,-5,0"
                       HasShadow="False">
                        <Grid>
                            <Label x:Name="UnreadBadgeLabel"
                               Text="0"
                               TextColor="White"
                               FontSize="10"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </Grid>
                <ImageButton x:Name="MoreButton"
                     Source="menuitem.png"
                     BackgroundColor="Transparent"
                     WidthRequest="30"
                     HeightRequest="30"
                     Clicked="OnMoreButtonClicked">
                    <ImageButton.IsVisible>
                        <OnPlatform x:TypeArguments="x:Boolean">
                            <On Platform="iOS" Value="True" />
                            <On Platform="Android" Value="False" />
                        </OnPlatform>
                    </ImageButton.IsVisible>
                </ImageButton>

            </StackLayout>

        </AbsoluteLayout>


    </NavigationPage.TitleView>
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Home"></MenuBarItem>
    </ContentPage.MenuBarItems>
