<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartPharma5.View.ChatNotifView"
             xmlns:local="clr-namespace:SmartPharma5.Model"
             xmlns:converters="clr-namespace:SmartPharma5.Converters"
             Title="ChatNotifView">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ReadStatusToImageConverter x:Key="ReadStatusToImageConverter" />
            <converters:IndexConverter x:Key="IndexConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <!-- Main Chat View -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Search Bar -->
                <RowDefinition Height="*" />
                <!-- Chat Content -->
            </Grid.RowDefinitions>

            <!-- Search and Multi-Send Area -->
            <Grid Grid.Row="0" Padding="10" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <SearchBar Grid.Column="0"
                       Placeholder="Rechercher..."
                       BackgroundColor="White"
                       TextColor="Black"
                       Text="{Binding SearchText}" />

                <Button Grid.Column="1"
                    Text="Envoyer multiple"
                    Command="{Binding ToggleCheckboxesCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    CornerRadius="20"
                    WidthRequest="150"
                    HeightRequest="45"
                    FontAttributes="Bold"
                    IsVisible="{Binding HasSelection}" />
            </Grid>

            <!-- Chat Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100" />
                    <!-- User List -->
                    <ColumnDefinition Width="*" />
                    <!-- Messages -->
                </Grid.ColumnDefinitions>

                <!-- User Avatars List -->
                <CollectionView Grid.Column="0"
                           ItemsSource="{Binding FilteredUsers}"
                           SelectionMode="Single"
                           SelectedItem="{Binding SelectedUser, Mode=TwoWay}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout HorizontalOptions="Center" Spacing="5">
                                <AbsoluteLayout HeightRequest="50" WidthRequest="50">
                                    <!-- Profile Picture -->
                                    <Frame Padding="0" 
                                       HasShadow="False" 
                                       HeightRequest="50" 
                                       WidthRequest="50" 
                                       CornerRadius="25" 
                                       BorderColor="{Binding IsSelected}">
                                        <Image Source="{Binding Avatar}" Aspect="AspectFill"/>
                                    </Frame>


                                    <!-- Cercle rouge de notification avec numéro -->
                                    <Frame BackgroundColor="Red"
                                                               HeightRequest="18" WidthRequest="18"
                                                               CornerRadius="20"
                                                               AbsoluteLayout.LayoutFlags="PositionProportional"
                                                               AbsoluteLayout.LayoutBounds="1,0,18,18"
                                                               IsVisible="{Binding HasUnreadMessages}"  
                                                               Padding="0">
                                        <Grid>
                                            <Label Text="{Binding UnreadMessagesCount}" FontSize="12" TextColor="White" FontAttributes="Bold"
                                                                HorizontalOptions="Center" VerticalOptions="Center" />
                                        </Grid>
                                    </Frame>

                                    <!-- Nouvelle Checkbox en haut à droite -->
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                                  Color="Blue"
                                                                  AbsoluteLayout.LayoutFlags="PositionProportional"
                                                                  AbsoluteLayout.LayoutBounds="1,1,20,20"
                                                                  BackgroundColor="White"
                                                                  VerticalOptions="End"
                                                                  HorizontalOptions="End"
                                                                  CheckedChanged="OnCheckBoxCheckedChanged"
                                                                  IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ShowCheckboxes}"/>
                                </AbsoluteLayout>

                                <Label Text="{Binding Login}" 
                                   HorizontalOptions="Center"
                                   FontSize="Micro"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <StackLayout Grid.Column="1" Spacing="0" Padding="0">
                    <!-- Zone des messages -->
                    <StackLayout Spacing="10" Padding="10" BackgroundColor="#F0F0F0" VerticalOptions="FillAndExpand">
                        <StackLayout  IsVisible="{Binding TestLoad,Mode=TwoWay}" Orientation="Horizontal" Margin="20" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                            <Label Text="Failed Connection" FontAttributes="Bold" VerticalOptions="CenterAndExpand"></Label>
                            <Image Source="failed_con" VerticalOptions="CenterAndExpand"></Image>
                        </StackLayout>
                        
                        <!-- Indicateur de chargement "vers dernier message" -->
                        <StackLayout IsVisible="{Binding IsLoadingToLastMessage}" 
                                     Orientation="Horizontal" 
                                     Margin="20" 
                                     HorizontalOptions="CenterAndExpand" 
                                     VerticalOptions="CenterAndExpand"
                                     Spacing="10">
                            <ActivityIndicator IsRunning="True" 
                                              Color="#2196F3" 
                                              HeightRequest="20" 
                                              WidthRequest="20" 
                                              VerticalOptions="Center" />
                            <Label Text="Chargement vers dernier message..." 
                                   FontAttributes="Bold" 
                                   TextColor="#2196F3"
                                   VerticalOptions="Center" />
                        </StackLayout>
                        
                        <!-- Liste des messages dynamiques -->
                        <CollectionView x:Name="MessagesCollectionView" ItemsSource="{Binding Messages}" VerticalOptions="FillAndExpand">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <StackLayout Spacing="0">
                                        <!-- Label avec le nom de l'utilisateur -->
                                        <Label Text="{Binding PieceInfo}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               HorizontalOptions="{Binding PieceInfoAlignment}"
                                               IsVisible="{Binding PieceInfo, Mode=OneWay}"/>

                                        <!-- Message -->
                                        <Frame Padding="5" CornerRadius="10" BackgroundColor="{Binding BackgroundColor}"
                                                     HorizontalOptions="{Binding Alignment}" Margin="10,0,10,5">
                                            <StackLayout>
                                                <Label Text="{Binding Text}" Padding="5" HorizontalOptions="FillAndExpand" />
                                                <HorizontalStackLayout Spacing="5" HorizontalOptions="End">
                                                    <!-- Icône message lu (visible seulement si IsRead = true) -->
                                                    <!--<Image WidthRequest="20" HeightRequest="20" Source="{Binding ImageSource}" />-->

                                                    <!-- Label de date (inchangé) -->
                                                    <Label Text="{Binding CreateDate, StringFormat='{0:HH:mm}'}" 
                                                   FontSize="10" 
                                                   TextColor="Gray" 
                                                   VerticalOptions="Center"/>

                                                    <Image Source="unread_icon.png" 
                                                       WidthRequest="12"
                                                       HeightRequest="12"
                                                       IsVisible="{Binding ShowUnreadIndicator}" />

                                                    <!-- Icône "lu" (visible si IsRead = true ET IsLastSentMessage = true) -->
                                                    <Image Source="read_icon.png" 
                                                   WidthRequest="12"
                                                   HeightRequest="12"
                                                   IsVisible="{Binding ShowReadIndicator}" />
                                                </HorizontalStackLayout>
                                            </StackLayout>
                                        </Frame>
                                    </StackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
                            </CollectionView.ItemsLayout>
                        </CollectionView>
                        
                        <!-- Bouton flottant pour scroller vers le dernier message -->
                        <Button Text="↓"
                                Command="{Binding ScrollToLastMessageCommand}"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="25"
                                WidthRequest="50"
                                HeightRequest="50"
                                FontSize="20"
                                FontAttributes="Bold"
                                HorizontalOptions="End"
                                VerticalOptions="End"
                                Margin="0,0,10,10"
                                IsVisible="{Binding HasNewUnreadMessages}" />
                    </StackLayout>

                    <!-- Zone de saisie et bouton -->
                    <Grid VerticalOptions="End" BackgroundColor="#F0F0F0" Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <!-- Zone de saisie prend tout l'espace disponible -->
                            <ColumnDefinition Width="Auto" />
                            <!-- Bouton prend la largeur nécessaire -->
                        </Grid.ColumnDefinitions>

                        <!-- Zone de saisie avec coins arrondis -->
                        <Frame Grid.Column="0" CornerRadius="20" BackgroundColor="White" Padding="0" HasShadow="False">
                            <Entry Placeholder="Tapez un message..."
                   Text="{Binding MessageText, Mode=TwoWay}"
                   HorizontalOptions="FillAndExpand"
                   BackgroundColor="Transparent"
                   TextColor="Black"
                   PlaceholderColor="Gray"
                   HeightRequest="40"
                   Margin="10,0" />
                        </Frame>

                        <!-- Bouton Send -->
                        <Button Grid.Column="1" Text="Envoyer"
                                                    Command="{Binding SendMessageCommand}"
                                                    BackgroundColor="#4CAF50"
                                                    TextColor="White"
                                                    CornerRadius="20"
                                                    WidthRequest="90"
                                                    HeightRequest="40"
                                                    BorderWidth="0"
                                                    FontAttributes="Bold"
                                                    Margin="10,0,0,0" />
                    </Grid>
                </StackLayout>
            </Grid>
        </Grid>

        <!-- Connection Error Overlay -->
        <!--<StackLayout IsVisible="{Binding TestLoad}"
                 BackgroundColor="#CC000000"
                 VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand">
            <StackLayout Orientation="Horizontal" 
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Spacing="10">
                <Label Text="Failed Connection" 
                   FontAttributes="Bold"
                   TextColor="White"/>
                <Image Source="failed_con"/>
            </StackLayout>
        </StackLayout>-->
    </Grid>
</ContentPage>